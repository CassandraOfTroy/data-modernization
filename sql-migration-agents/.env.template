# SQL Migration Agents - TEMPLATE Environment
# Copy this file to .env and fill in your specific values
# DO NOT add actual API keys in this template - it gets committed to Git

# Choose ONE of these configurations:

# 1. Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name
AZURE_OPENAI_API_VERSION=2023-12-01-preview

# OR 

# 2. Standard OpenAI Configuration
# OPENAI_API_KEY=your-openai-api-key-here
# OPENAI_MODEL=gpt-4

# Agent Configuration
TEMPERATURE=0.2
MAX_TOKENS=4000
TIMEOUT_SECONDS=120
MAX_ITERATIONS=15
MEMORY_ENABLED=true
GROUP_CHAT_ENABLED=true
AGENT_TIMEOUT_SECONDS=300

# Output Configuration
OUTPUT_FORMAT=markdown
GENERATE_DIAGRAMS=true
DETAILED_ANALYSIS=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/sql_migration.log 