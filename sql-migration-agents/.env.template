# SQL Migration Agents - Environment Variables
# Copy this file to .env and fill in your specific values

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name
AZURE_OPENAI_API_VERSION=2023-12-01-preview
AZURE_OPENAI_MODEL=gpt-4

# Azure Key Vault (Optional - for secure credential storage)
USE_KEY_VAULT=false
AZURE_KEY_VAULT_NAME=your-keyvault-name
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret

# Azure Application Insights (Optional - for telemetry)
ENABLE_APP_INSIGHTS=false
APPLICATIONINSIGHTS_CONNECTION_STRING=your-app-insights-connection-string

# Agent Configuration
TEMPERATURE=0.2
MAX_TOKENS=4000
TIMEOUT_SECONDS=120
MAX_RETRIES=3
RETRY_DELAY=1.0

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/agents.log

# Project Configuration
PROJECT_NAME=SQLMigration
SOURCE_DIALECT=TSQL
TARGET_DIALECT=PySpark

# Do not modify these values unless you know what you're doing
# Use config/settings.yaml for more detailed configuration 